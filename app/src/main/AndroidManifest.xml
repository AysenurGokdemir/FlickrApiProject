<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.android.example.aysenur.flickrapiproject"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.android.example.aysenur.flickrapiproject.MainActivity"
            android:label=" welcome ! ">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.example.aysenur.flickrapiproject.GalleryActivity"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="com.android.example.aysenur.flickrapiproject.PhotoActivity">
        </activity>

    </application>

</manifest>